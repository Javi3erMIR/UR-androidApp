<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FreeMoveFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36dp"
            android:layout_marginTop="296dp"
            android:text="Funciones URapp"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnArbolPrograma"
            android:layout_width="373dp"
            android:layout_height="55dp"
            android:layout_marginTop="44dp"
            android:backgroundTint="#4494D3"
            android:text="Árbol de Programa"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/btnConfiguracion"
            android:layout_width="373dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FF4494D3"
            android:text="Configuración"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLibre" />

        <Button
            android:id="@+id/btnLibre"
            android:layout_width="373dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF4494D3"
            android:text="Movimiento Libre"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnArbolPrograma" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="373dp"
            android:layout_height="55dp"
            android:layout_marginBottom="44dp"
            android:backgroundTint="#FF4494D3"
            android:text="Salir"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:textColor="#c9c9c9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by Grupo Taasa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSalir" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>